<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.msushanth.tablesapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".PresentationLayer.ViewClasses.Account.LogInView"
            android:windowSoftInputMode="adjustPan"
            android:configChanges = "orientation"
            android:screenOrientation = "portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PresentationLayer.ViewClasses.Account.CreateAccountView"
            android:label="@string/title_activity_create_account"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan"
            android:configChanges = "orientation"
            android:screenOrientation = "portrait"/>
        <activity
            android:name=".PresentationLayer.ViewClasses.Invitation.SelectMatchedUsersView"
            android:label="SelectMatchedUsersForm"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan"
            android:configChanges = "orientation"
            android:screenOrientation = "portrait"/>
        <activity
            android:name=".PresentationLayer.ViewClasses.Chat.ChatRoomForm"
            android:label="ChatRoomForm"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan"
            android:configChanges = "orientation"
            android:screenOrientation = "portrait"/>
        <activity
            android:name=".MainActivity"
            android:label="Tables"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan"
            android:configChanges = "orientation"
            android:screenOrientation = "portrait"/>
        <activity
            android:name=".PresentationLayer.ViewClasses.Profile.CreatePersonalProfileView"
            android:label="CreatePersonalProfileForm"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan"
            android:configChanges = "orientation"
            android:screenOrientation = "portrait"/>
        <activity
            android:name=".PresentationLayer.ViewClasses.Profile.EditPersonalProfileView"
            android:label="EditPersonalProfileForm"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan"
            android:configChanges = "orientation"
            android:screenOrientation = "portrait"/>
        <activity
            android:name=".PresentationLayer.ViewClasses.Account.PasswordRecoveryView"
            android:label="PasswordResetForm"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan"
            android:configChanges = "orientation"
            android:screenOrientation = "portrait"/>
        <activity
            android:name=".PresentationLayer.ViewClasses.Invitation.ProfileViewer"
            android:label="@string/title_activity_profile_viewer"
            android:theme="@style/AppTheme"
            android:configChanges = "orientation"
            android:screenOrientation = "portrait"/>
        <activity
            android:name=".PresentationLayer.ViewClasses.Chat.SetWhenAndWhereToMeetForm"
            android:label="WhenAndWhereToMeet"
            android:theme="@style/AppTheme"
            android:configChanges = "orientation"
            android:screenOrientation = "portrait"/>
    </application>

</manifest>