<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@color/black200">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center_vertical" >

            <ImageView
                android:id="@+id/appIcon"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/app_icon"
                android:layout_margin="@dimen/profile_padding" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search for other people to grab a meal with."
                android:textSize="30dp"
                android:textAlignment="center"
                android:textColor="@color/black900"/>
            <Button
                android:id="@+id/searchForUsersButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:background="@drawable/rounded_button"
                android:textColor="@color/black50"/>

            <Button
                android:id="@+id/searchForRandomUsersButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:background="@drawable/rounded_button"
                android:textColor="@color/black50"
                android:onClick="randomSearchButtonClicked"
                android:text="Random Search" />

            <!--
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/search_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search" />
            </ScrollView>
            -->

        </LinearLayout>
</RelativeLayout>
